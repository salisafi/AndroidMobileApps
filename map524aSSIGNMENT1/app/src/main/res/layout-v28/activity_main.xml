<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/stdNameTextView"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#0000ff"
            android:gravity="center"
            android:text="@string/student_name"
            android:textColor="#ffff00"
            android:textFontWeight="bolder"
            android:textSize="30dp"

            />

        <RelativeLayout
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/stdNameTextView"
            android:layout_weight="0.5"
            android:gravity="left"
            android:orientation="vertical"
            android:textAlignment="gravity">

            <TextView
                android:id="@+id/hiTextview"
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:layout_marginTop="15dp"
                android:paddingLeft="5dp"
                android:text="@string/hi_world"
                android:textSize="22sp" />

            <RadioGroup
                android:id="@+id/HiRadios"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/hiTextview">


                <RadioButton
                    android:id="@+id/AliceRadio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/alice"
                    android:textSize="20sp"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="83dp" />

                <RadioButton
                    android:id="@+id/BobRadio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bob"
                    android:textSize="20sp"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="139dp" />

                <RadioButton
                    android:id="@+id/CarolRadio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/carol"
                    android:textSize="20sp"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="83dp" />


            </RadioGroup>

            <Button
                android:id="@+id/HiBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/HiRadios"
                android:text="@string/say_hi"
                android:textSize="20sp" />

        </RelativeLayout>

        <!-- second column -->
        <android.support.constraint.ConstraintLayout
            android:id="@+id/secssion1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/stdNameTextView"
            android:layout_weight="0.5"
            android:baselineAligned="false"
            android:gravity="right"
            android:textAlignment="gravity">

            <TextView
                android:id="@+id/helloTextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="start"
                android:paddingRight="5dp"
                android:text="Hello Seneca"
                android:textSize="22sp"
                app:layout_constraintStart_toStartOf="@+id/HelloBtn"
                app:layout_constraintTop_toBottomOf="@+id/HelloBtn" />


            <RadioButton
                android:id="@+id/DaveRadio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="76dp"
                android:layout_marginRight="76dp"
                android:layout_marginTop="362dp"
                android:text="@string/dave"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <RadioButton
                android:id="@+id/EveRadio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/eve"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="@+id/DaveRadio"
                app:layout_constraintTop_toBottomOf="@+id/DaveRadio" />

            <RadioButton
                android:id="@+id/FredRadio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fred"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="@+id/EveRadio"
                app:layout_constraintTop_toBottomOf="@+id/EveRadio" />


            <Button
                android:id="@+id/HelloBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/say_hello"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="@+id/FredRadio"
                app:layout_constraintTop_toBottomOf="@+id/FredRadio" />

        </android.support.constraint.ConstraintLayout>

        <!-- Second row -->
        <RelativeLayout
            android:id="@+id/checkboxes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ff00ff"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/redCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="#ff0000"
                android:text="Red" />

            <CheckBox
                android:id="@+id/YellowCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ffff00"
                android:text="Yellow" />


            <CheckBox
                android:id="@+id/GreenCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:background="#00ff00"
                android:text="Green" />

            <!--  <CheckBox
                    android:id="@+id/YellowCheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:text="Green" />  -->

        </RelativeLayout>

        <Button
            android:id="@+id/ColorBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/checkboxes"
            android:gravity="center"
            android:text="COLORS"
            android:textSize="20sp" />

    </LinearLayout> <!-- big layout -->


</android.support.constraint.ConstraintLayout>